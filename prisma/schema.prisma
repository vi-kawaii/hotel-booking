generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id     Int      @id @default(autoincrement())
  room   Room     @relation(fields: [roomId], references: [id])
  from   DateTime
  to     DateTime
  is_vip Boolean
  roomId Int
}

model Room {
  id      Int       @id @default(autoincrement())
  number  Int
  Booking Booking[]
}
